#!/bin/sh

if [ "x$BRISK_ENV" = "x" ]; then
    for include in /etc/brisk/brisk-env.sh \
                   ~/.brisk-env.sh \
                   `dirname $0`/brisk-env.sh; do
        if [ -r $include ]; then
            . $include
            break
        fi
    done
elif [ -r $BRISK_ENV ]; then
    . $BRISK_ENV
fi

# Use JAVA_HOME if set, otherwise look for java in PATH
if [ -x $JAVA_HOME/bin/java ]; then
    JAVA=$JAVA_HOME/bin/java
else
    JAVA=`which java`
fi

$JAVA_HOME/bin/java -cp $CLASSPATH -Dstorage-config=$CASSANDRA_CONF -Dlog4j.configuration=log4j-tools.properties com.datastax.brisk.BriskTool $*
